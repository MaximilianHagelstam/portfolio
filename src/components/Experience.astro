---
export interface Props {
  title: string;
  description: string;
  period: string;
}

const { title, description, period } = Astro.props;
---

<div class="w-full border-b border-neutral-800 py-4">
  <div class="flex flex-col justify-between sm:flex-row">
    <div class="flex w-full flex-col justify-start sm:w-2/3">
      <h4 class="mb-2 text-lg font-medium text-neutral-100">
        {title}
      </h4>
      <p class="text-neutral-400">
        {description}
      </p>
    </div>
    <div class="mt-4 w-full text-neutral-400 sm:mt-0 sm:w-1/3">
      {period}
    </div>
  </div>
</div>
