---
export interface Props {
  index: string;
  title: string;
  duration: string;
}

const { index, title, duration } = Astro.props;
---

<a class="w-full" href="#">
  <div
    class="w-full transform border-b border-gray-700 py-3 transition-all hover:scale-[1.01]"
  >
    <div class="flex flex-col items-baseline justify-between sm:flex-row">
      <div class="flex items-center">
        <div class="mr-6 text-left text-gray-400">
          {index}
        </div>
        <h4 class="w-full text-lg font-medium text-gray-100">
          {title}
        </h4>
      </div>
      <div
        class="mt-2 flex w-full items-center justify-between sm:mt-0 sm:w-auto"
      >
        <p
          class="mr-2 ml-10 w-32 text-left text-gray-400 sm:ml-0 sm:text-right md:mb-0"
        >
          {duration}
        </p>
      </div>
    </div>
  </div>
</a>
