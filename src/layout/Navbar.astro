---
import { LanguageSelector } from 'astro-i18next/components';
---

<nav
  class="relative mx-auto flex w-full max-w-2xl items-center justify-between pt-8"
>
  <div>
    <a
      class="font-normal text-neutral-400 transition-all hover:text-white"
      href="https://github.com/MaximilianHagelstam"
      target="_blank"
    >
      GitHub
    </a>
    <a
      class="ml-4 font-normal text-neutral-400 transition-all hover:text-white"
      href="https://www.linkedin.com/in/maximilian-hagelstam-704840186/"
      target="_blank"
    >
      LinkedIn
    </a>
    <a
      class="ml-4 font-normal text-neutral-400 transition-all hover:text-white"
      href="https://www.dropbox.com/s/rxt4m54w0nmui8a/resume.pdf"
      target="_blank"
    >
      CV
    </a>
  </div>
  <div class="flex justify-end space-x-4">
    <LanguageSelector class="bg-black text-white" />
    <button
      aria-label="change theme"
      class="flex items-center justify-center rounded-lg p-2 transition-all hover:bg-white hover:bg-opacity-10"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        class="h-5 w-5"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"
        ></path>
      </svg>
    </button>
  </div>
</nav>
